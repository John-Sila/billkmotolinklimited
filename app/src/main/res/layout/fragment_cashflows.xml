<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.cashflows.CashflowsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ProgressBar
                android:id="@+id/cashFlowsProgressBar"
                android:layout_width="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/noCashFlowsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/no_cash_flows"
                android:visibility="gone"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="18sp"
                android:padding="10dp"
                android:gravity="center"/>

            <SearchView
                android:id="@+id/searchView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:queryHint="Search by Transaction ID"
                android:iconifiedByDefault="false"
                android:gravity="end"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewCashFlows"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="12dp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>


<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.batteries.BatteriesFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!--paused operations 1-->
            <Button
                android:id="@+id/btnOperationsPaused1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/company_operations_are_paused"
                android:visibility="gone"
                android:backgroundTint="@android:color/holo_red_dark"
                android:padding="12dp"
                android:enabled="false"
                android:layout_marginTop="12dp"/>

            <ProgressBar
                android:id="@+id/BatteriesProgressBar"
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>

            <!--UNIVERSAL-->
            <androidx.cardview.widget.CardView
                android:id="@+id/universalSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="12dp"
                android:layout_marginBottom="20dp"
                android:visibility="gone"
                android:orientation="vertical"
                android:gravity="center"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="@android:color/holo_green_dark"
                        android:text="@string/battery_information"
                        android:layout_margin="15dp"
                        android:layout_gravity="start"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@android:color/holo_orange_dark"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:text="@string/battery" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@android:color/holo_orange_dark"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:text="@string/location" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@android:color/holo_orange_dark"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:text="@string/bike" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@android:color/holo_orange_dark"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:text="@string/rider" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@android:color/holo_orange_dark"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:text="@string/status_changed" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height=".2dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:background="@drawable/row_divider"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/batteryRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:padding="8dp"
                        />

                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
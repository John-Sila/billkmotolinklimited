<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView android:id="@+id/item_name" android:layout_weight="1"
        android:layout_width="0dp" android:layout_height="wrap_content"
        android:gravity="center" />

    <TextView android:id="@+id/item_count" android:layout_weight="1"
        android:layout_width="0dp" android:layout_height="wrap_content"
        android:gravity="center" />

    <TextView android:id="@+id/status" android:layout_weight="1"
        android:layout_width="0dp" android:layout_height="wrap_content"
        android:gravity="center" />

    <TextView android:id="@+id/cost" android:layout_weight="1"
        android:layout_width="0dp" android:layout_height="wrap_content"
        android:gravity="center" />

    <TextView android:id="@+id/posted_at" android:layout_weight="1"
        android:layout_width="0dp" android:layout_height="wrap_content"
        android:gravity="center"/>
</LinearLayout>

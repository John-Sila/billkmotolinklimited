<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.require_reclock.RequireReclockFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="15dp"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/require_a_rider"
                        android:textSize="18sp"
                        android:layout_marginBottom="20dp"
                        android:textColor="@android:color/holo_blue_dark"
                        android:textStyle="bold"/>

                    <!--user to require-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="15dp"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/text7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/select_user"
                            android:textSize="18sp"
                            android:layout_marginEnd="15dp"
                            android:textColor="@android:color/holo_blue_dark"
                            android:textStyle="bold"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <Spinner
                                android:id="@+id/userToRequire"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height=".1dp"
                                android:background="@android:color/holo_orange_dark" /> <!-- underline color -->

                        </LinearLayout>
                    </LinearLayout>

                    <!--action calendar-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="15dp"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/text8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/date"
                            android:textSize="18sp"
                            android:layout_marginTop="20dp"
                            android:textColor="@android:color/holo_blue_dark"
                            android:textStyle="bold"/>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="6dp">

                            <DatePicker
                                android:id="@+id/calendarView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <!--gross income-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/text1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/in_app_balance"
                            android:textSize="18sp"
                            android:layout_marginEnd="15dp"
                            android:textStyle="bold"/>

                        <!-- iabToUse Input -->
                        <EditText
                            android:id="@+id/inAppBalToRequire"
                            android:layout_width="150sp"
                            android:layout_height="wrap_content"
                            android:autofillHints=""
                            android:hint="@string/zero_amount"
                            android:inputType="numberDecimal"
                            android:padding="16dp"
                            android:textColor="@android:color/holo_blue_bright"
                            android:background="@drawable/rounded_inputs" />

                        <Button
                            android:id="@+id/btnAutoFetchBal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="@string/auto"
                            android:backgroundTint="@android:color/holo_orange_dark"
                            android:padding="12dp"/>

                        <ProgressBar
                            android:id="@+id/autoFetchProgressBar"
                            android:layout_width="wrap_content"
                            android:visibility="gone"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"/>

                    </LinearLayout>


                    <!-- Require Button and ProgressBar -->
                    <ProgressBar
                        android:id="@+id/requirementsProgressBar"
                        android:layout_width="wrap_content"
                        android:visibility="gone"
                        android:layout_marginTop="15dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"/>
                    <Button
                        android:id="@+id/btnRequire"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/require"
                        android:backgroundTint="@android:color/holo_orange_dark"
                        android:padding="12dp"
                        android:visibility="gone"
                        android:layout_marginTop="12dp"/>

                    <Button
                        android:id="@+id/btnOperationsPaused"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/company_operations_are_paused"
                        android:visibility="gone"
                        android:backgroundTint="@android:color/holo_red_dark"
                        android:padding="12dp"
                        android:enabled="false"
                        android:layout_marginTop="12dp"/>



                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
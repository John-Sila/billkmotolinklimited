<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.users.UsersFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:layout_marginBottom="30dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:contentDescription="@string/money_image"
                    android:src="@drawable/user_management"
                    android:scaleType="centerCrop" />
            </LinearLayout>

            <!--create new user-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardBackgroundColor="?attr/cardBackgroundColor"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="15dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/text_users"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/create_a_new_user"
                        android:textSize="25sp"
                        android:textColor="@android:color/holo_blue_dark"
                        android:textStyle="bold"/>

        <!--            full name-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:contentDescription="@string/full_name"
                            android:src="@drawable/view"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:id="@+id/text1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/full_name"
                            android:textSize="18sp"
                            android:layout_marginEnd="15dp"
                            android:textStyle="bold"/>

                        <!-- Full name Input -->
                        <EditText
                            android:id="@+id/inputFullName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:autofillHints=""
                            android:hint=""
                            android:inputType="textCapWords"
                            android:padding="16dp"
                            android:textColor="@android:color/holo_orange_dark"/>

                    </LinearLayout>

        <!--            Email-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:contentDescription="@string/email"
                            android:src="@drawable/view"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:id="@+id/text3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/email"
                            android:textSize="18sp"
                            android:layout_marginEnd="15dp"
                            android:textStyle="bold"/>

                        <!-- Email Input -->
                        <EditText
                            android:id="@+id/inputEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:autofillHints=""
                            android:hint="@string/user_mail_gmail_com"
                            android:inputType="textEmailAddress"
                            android:padding="16dp"
                            android:textColor="@android:color/holo_orange_dark"/>

                    </LinearLayout>

                    <!--            password-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:contentDescription="@string/password"
                            android:src="@drawable/view"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:id="@+id/text2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/password"
                            android:textSize="18sp"
                            android:layout_marginEnd="15dp"
                            android:textStyle="bold"/>

                        <!-- Full name Input -->
                        <EditText
                            android:id="@+id/inputPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:autofillHints=""
                            android:hint=""
                            android:inputType="text"
                            android:padding="16dp"
                            android:textColor="@android:color/holo_orange_dark"/>
                    </LinearLayout>

        <!--            ID number-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:contentDescription="@string/id_number"
                            android:src="@drawable/view"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:id="@+id/text4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/id_number"
                            android:textSize="18sp"
                            android:layout_marginEnd="15dp"
                            android:textStyle="bold"/>

                        <!-- ID Input -->
                        <EditText
                            android:id="@+id/inputIDNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:autofillHints=""
                            android:hint="@string/_12345678"
                            android:inputType="numberDecimal"
                            android:padding="16dp"
                            android:textColor="@android:color/holo_orange_dark"/>
                    </LinearLayout>

        <!--            phone number-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:contentDescription="@string/phone_number"
                            android:src="@drawable/view"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:id="@+id/text5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/phone_number"
                            android:textSize="18sp"
                            android:layout_marginEnd="15dp"
                            android:textStyle="bold"/>

                        <!-- Phone number Input -->
                        <EditText
                            android:id="@+id/inputPhoneNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:autofillHints=""
                            android:hint="@string/_0712345678"
                            android:inputType="numberDecimal"
                            android:padding="16dp"
                            android:textColor="@android:color/holo_orange_dark"/>

                    </LinearLayout>

                    <!--gender-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="15dp"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/text9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/gender"
                            android:textSize="18sp"
                            android:layout_marginEnd="15dp"
                            android:textColor="@android:color/holo_blue_dark"
                            android:textStyle="bold"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <Spinner
                                android:id="@+id/userGender"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height=".1dp"
                                android:background="@android:color/holo_orange_dark" /> <!-- underline color -->

                        </LinearLayout>

                    </LinearLayout>

        <!--            rank-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="15dp"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/text6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/rank"
                            android:textSize="18sp"
                            android:layout_marginEnd="15dp"
                            android:textColor="@android:color/holo_blue_dark"
                            android:textStyle="bold"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <Spinner
                                android:id="@+id/userRank"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height=".1dp"
                                android:background="@android:color/holo_orange_dark" /> <!-- underline color -->

                        </LinearLayout>


                    </LinearLayout>

                    <!-- Submit Button -->
                    <Button
                        android:id="@+id/btnAddUser"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/create_user"
                        android:backgroundTint="@android:color/holo_blue_dark"
                        android:padding="12dp"
                        android:visibility="gone"
                        android:layout_marginTop="12dp"/>

                    <!--paused operations-->
                    <Button
                        android:id="@+id/btnOperationsPaused1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/company_operations_are_paused"
                        android:visibility="gone"
                        android:backgroundTint="@android:color/holo_red_dark"
                        android:padding="12dp"
                        android:enabled="false"
                        android:layout_marginTop="12dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!--manage existing users-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="?attr/cardBackgroundColor"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="15dp"
                    android:gravity="center">

                    <!--EXISTING USERS-->
                    <TextView
                        android:id="@+id/text_manage_existing_users"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/manage_existing_users"
                        android:textSize="25sp"
                        android:layout_marginTop="20dp"
                        android:textColor="@android:color/holo_blue_dark"
                        android:textStyle="bold"/>

                    <!--user to manage-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="15dp"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/text7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/select_user"
                            android:textSize="18sp"
                            android:layout_marginEnd="15dp"
                            android:textColor="@android:color/holo_blue_dark"
                            android:textStyle="bold"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <Spinner
                                android:id="@+id/userToManage"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height=".1dp"
                                android:background="@android:color/holo_orange_dark" /> <!-- underline color -->

                        </LinearLayout>


                    </LinearLayout>

                    <!--action-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="15dp"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/text8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/select_action"
                            android:textSize="18sp"
                            android:layout_marginEnd="15dp"
                            android:textColor="@android:color/holo_blue_dark"
                            android:textStyle="bold"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <Spinner
                                android:id="@+id/actionForUser"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height=".1dp"
                                android:background="@android:color/holo_orange_dark" /> <!-- underline color -->

                        </LinearLayout>


                    </LinearLayout>

                    <!-- Submit Button -->
                    <Button
                        android:id="@+id/btnUpdateUserStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/engage_action"
                        android:backgroundTint="@android:color/holo_orange_dark"
                        android:padding="12dp"
                        android:visibility="gone"
                        android:layout_marginTop="12dp"/>
                    <Button
                        android:id="@+id/btnOperationsPaused2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/company_operations_are_paused"
                        android:visibility="gone"
                        android:backgroundTint="@android:color/holo_red_dark"
                        android:padding="12dp"
                        android:enabled="false"
                        android:layout_marginTop="12dp"/>



                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.incidences.IncidencesFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="275dp"
                    android:layout_height="150dp"
                    android:contentDescription="@string/money_image"
                    android:src="@drawable/incidences"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="8dp" />
            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardBackgroundColor="?attr/cardBackgroundColor"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="15dp"
                    android:gravity="center">



                    <TextView
                        android:id="@+id/text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/incidents_and_accidents_reported"
                        android:textColor="@android:color/holo_blue_dark"
                        android:textSize="20sp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"/>
                    <TextView
                        android:id="@+id/text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/no_reports_yet"
                        android:textSize="14sp"
                        android:visibility="gone"
                        android:fontFamily="monospace"
                        android:textColor="@android:color/holo_red_dark"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginEnd="5dp"
                        android:textStyle="bold"/>


                    <!-- Clear reports Button -->
                    <Button
                        android:id="@+id/btnClearReports"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/clear_reports"
                        android:backgroundTint="@android:color/holo_red_dark"
                        android:padding="12dp"
                        android:enabled="true"
                        android:layout_marginTop="12dp"/>

                    <ProgressBar
                        android:id="@+id/reportsProgressBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"/>

                    <!-- RecyclerView to display reports -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/reportsRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="0dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />


            </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>

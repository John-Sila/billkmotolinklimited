<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.settings.SettingsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!--profile-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="vertical"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="?attr/cardBackgroundColor"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/shimmerLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:shimmer_auto_start="true"
                    app:shimmer_duration="1200">

                    <!-- This is your placeholder layout -->
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="5dp">

                        <View
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/shimmer_circle_placeholder" />

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp">

                            <View
                                android:layout_width="100dp"
                                android:layout_height="20dp"
                                android:background="@drawable/shimmer_placeholder" />

                            <View
                                android:layout_width="200dp"
                                android:layout_height="20dp"
                                android:layout_marginTop="8dp"
                                android:background="@drawable/shimmer_placeholder" />

                            <View
                                android:layout_width="50dp"
                                android:layout_height="20dp"
                                android:layout_marginTop="8dp"
                                android:background="@drawable/shimmer_placeholder" />

                        </LinearLayout>


                    </LinearLayout>
                </com.facebook.shimmer.ShimmerFrameLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="15dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/malePImage"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:contentDescription="@string/money_image"
                        android:src="@drawable/male"
                        android:visibility="gone"
                        android:scaleType="centerCrop"
                        android:background="@drawable/circle_bg"
                        android:layout_marginEnd="8dp" />
                    <ImageView
                        android:id="@+id/femalePImage"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:contentDescription="@string/money_image"
                        android:src="@drawable/female"
                        android:visibility="gone"
                        android:scaleType="centerCrop"
                        android:background="@drawable/circle_bg"
                        android:layout_marginEnd="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="5dp"
                        android:gravity="start">
                        <TextView
                            android:id="@+id/usernameTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="18sp"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/emailTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="18sp"
                            android:layout_marginEnd="15dp"/>
                        <TextView
                            android:id="@+id/phoneTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textStyle="italic"
                            android:textSize="18sp"
                            android:layout_marginEnd="15dp"/>
                        <TextView
                            android:id="@+id/rankTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@android:color/holo_green_dark"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_marginEnd="15dp"/>
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!--actions-->
            <LinearLayout
                android:id="@+id/actionsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:visibility="gone"
                android:gravity="start">

                <ImageView
                    android:id="@+id/keyImage"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:contentDescription="@string/money_image"
                    android:src="@drawable/key"
                    android:scaleType="centerCrop"
                    android:background="@drawable/circle_bg"
                    android:layout_marginEnd="8dp" />
                <TextView
                    android:id="@+id/actions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/actions"
                    android:textSize="20sp"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!--username div-->
            <LinearLayout
                android:id="@+id/newUserNameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:visibility="gone"
                android:gravity="center">

                <ImageView
                    android:id="@+id/userNameImage"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:contentDescription="@string/money_image"
                    android:src="@drawable/portrait"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="8dp" />
                <EditText
                    android:id="@+id/inputNewUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints=""
                    android:hint="@string/enter_new_username"
                    android:inputType="textCapWords"
                    android:padding="16dp"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/gray"
                    android:background="@drawable/rounded_inputs" />
            </LinearLayout>

            <ProgressBar
                android:id="@+id/changeUserNameProgressBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"/>
            <!-- change username -->
            <Button
                android:id="@+id/btnChangeUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/change_username"
                android:backgroundTint="@color/d3"
                android:padding="12dp"
                android:visibility="gone"
                android:layout_marginTop="12dp"/>

            <!--password modal-->
            <LinearLayout
                android:id="@+id/changePasswordsModal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginStart="5dp"
                android:gravity="start">


                <!--old pw-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/oldPwImage"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:contentDescription="@string/money_image"
                        android:src="@drawable/secure"
                        android:scaleType="centerCrop"
                        android:layout_marginEnd="8dp" />
                    <EditText
                        android:id="@+id/oldPwInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autofillHints=""
                        android:hint="@string/old_password"
                        android:inputType="text"
                        android:padding="16dp"
                        android:layout_marginEnd="10dp"
                        android:textColor="@color/gray"
                        android:background="@drawable/rounded_inputs" />

                </LinearLayout>

                <!--new pw-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/newPwImage"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:contentDescription="@string/money_image"
                        android:src="@drawable/secure"
                        android:scaleType="centerCrop"
                        android:layout_marginEnd="8dp" />
                    <EditText
                        android:id="@+id/newPwInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autofillHints=""
                        android:hint="@string/new_password"
                        android:inputType="text"
                        android:padding="16dp"
                        android:layout_marginEnd="10dp"
                        android:textColor="@color/gray"
                        android:background="@drawable/rounded_inputs" />

                </LinearLayout>
            </LinearLayout>

            <ProgressBar
                android:id="@+id/changePwdProgressBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"/>
            <!-- change password -->
            <Button
                android:id="@+id/btnChangePassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/change_password"
                android:backgroundTint="@color/brown2"
                android:padding="12dp"
                android:visibility="gone"
                android:layout_marginTop="12dp"/>

            <ProgressBar
                android:id="@+id/mainProgressBar"
                android:visibility="visible"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"/>

            <!--card for pfp-->
            <androidx.cardview.widget.CardView
                android:id="@+id/pfpCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:visibility="gone"
                app:cardBackgroundColor="?attr/cardBackgroundColor"
                android:orientation="vertical"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <!--profile picture-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="16dp">

                    <!--the progress bar-->
                    <ProgressBar
                        android:id="@+id/pfpProgressBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_marginTop="15dp"
                        android:layout_gravity="center"/>

                    <!-- Choose Photo Button -->
                    <Button
                        android:id="@+id/btnChoosePhoto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@android:color/holo_purple"
                        android:text="Upload Profile Picture" />

                    <!-- Image Preview -->
                    <ImageView
                        android:id="@+id/imagePreview"
                        android:layout_width="300dp"
                        android:layout_height="300dp"
                        android:scaleType="centerCrop"
                        android:visibility="gone"
                        android:layout_marginTop="16dp" />

                    <!-- Upload and Cancel Buttons -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/actionButtons"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp">

                        <Button
                            android:id="@+id/btnCancel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cancel"
                            android:backgroundTint="@android:color/holo_red_dark"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                        <Button
                            android:id="@+id/btnUpload"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/upload"
                            android:backgroundTint="@android:color/holo_green_dark"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ceo stuff-->
            <LinearLayout
                android:id="@+id/ceoDiv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:gravity="center">

                <!--incomes-->
                <LinearLayout
                    android:id="@+id/companyIncomeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:gravity="start">

                    <!--company income-->
                    <LinearLayout
                        android:id="@+id/companyIncome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="30dp"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/incomeImage"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:contentDescription="@string/money_image"
                            android:src="@drawable/wallet"
                            android:scaleType="centerCrop"
                            android:background="@drawable/circle_bg"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/incomeText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/company_income"
                            android:textSize="18sp"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/incomeValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/zero_amount"
                            android:layout_marginStart="10dp"
                            android:textSize="22sp"
                            android:textStyle="bold"/>

                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        app:cardBackgroundColor="?attr/cardBackgroundColor"
                        android:orientation="vertical"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="6dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="15dp"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/this_week"
                                android:textSize="18sp"
                                android:textStyle="bold"/>
                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <!--gross income-->
                    <LinearLayout
                        android:id="@+id/weeklyGross"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:contentDescription="@string/money_image"
                            android:src="@drawable/money1"
                            android:scaleType="centerCrop"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/gross_income_"
                            android:textSize="18sp"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/totalGrossIncome"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/zero_amount"
                            android:textColor="@android:color/holo_blue_dark"
                            android:layout_marginStart="10dp"
                            android:textSize="22sp"
                            android:textStyle="bold"/>

                    </LinearLayout>

                    <!--net income-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:contentDescription="@string/money_image"
                            android:src="@drawable/money2"
                            android:scaleType="centerCrop"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/net_income_"
                            android:textSize="18sp"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/totalNetIncome"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/zero_amount"
                            android:textColor="@android:color/holo_green_dark"
                            android:layout_marginStart="10dp"
                            android:textSize="22sp"
                            android:textStyle="bold"/>

                    </LinearLayout>

                    <!--rider expenses-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:contentDescription="@string/money_image"
                            android:src="@drawable/money3"
                            android:scaleType="centerCrop"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/total_rider_expenses"
                            android:textSize="18sp"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/totalDifference"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/zero_amount"
                            android:textColor="@android:color/holo_red_dark"
                            android:layout_marginStart="10dp"
                            android:textSize="22sp"
                            android:textStyle="bold"/>

                    </LinearLayout>

                    <!-- variables for income-->
                    <LinearLayout
                        android:id="@+id/companyIncomeVariables"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="20dp"
                        android:gravity="start">

                        <TextView
                            android:id="@+id/variablesText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/variables_directly"
                            android:textSize="22sp"
                            android:textColor="@android:color/holo_orange_dark"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/variable1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/income_approved_from_riders"
                            android:textSize="18sp"/>
                        <TextView
                            android:id="@+id/variable2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/human_resource_budgets"
                            android:textSize="18sp"/>
                        <TextView
                            android:id="@+id/variable3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ploughed_back"
                            android:textSize="18sp"/>
                        <TextView
                            android:id="@+id/variable4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/direct_withdrawals"
                            android:textSize="18sp"/>

                    </LinearLayout>

                    <!--commission constant-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp"
                        android:gravity="start">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/current_commission_constant_is"
                            android:textSize="18sp"/>

                        <TextView
                            android:id="@+id/cConstant"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/_0_percent"
                            android:textSize="18sp"/>

                    </LinearLayout>

                </LinearLayout>

                <!--// withdrawal-->
                <LinearLayout
                    android:id="@+id/withdrawalLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:visibility="gone"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/withdrawalImage"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:contentDescription="@string/money_image"
                        android:src="@drawable/minus"
                        android:scaleType="centerCrop"
                        android:background="@drawable/circle_bg"
                        android:layout_marginEnd="8dp" />
                    <EditText
                        android:id="@+id/withdrawalInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autofillHints=""
                        android:hint="@string/amount"
                        android:inputType="numberDecimal"
                        android:padding="16dp"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/gray"
                        android:background="@drawable/rounded_inputs" />


                </LinearLayout>
                <ProgressBar
                    android:id="@+id/progressBar3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_gravity="center"/>
                <Button
                    android:id="@+id/btnWithdrawCompanyMoney"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/record_withdraw_from_company_to_personal"
                    android:backgroundTint="@color/brown3"
                    android:padding="12dp"
                    android:layout_marginTop="12dp"/>



<!--                add income-->
                <LinearLayout
                    android:id="@+id/addingLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:visibility="gone"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/addingImage"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:contentDescription="@string/money_image"
                        android:src="@drawable/plus"
                        android:scaleType="centerCrop"
                        android:background="@drawable/circle_bg"
                        android:layout_marginEnd="8dp" />
                    <EditText
                        android:id="@+id/addInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autofillHints=""
                        android:hint="@string/amount"
                        android:inputType="numberDecimal"
                        android:padding="16dp"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/gray"
                        android:background="@drawable/rounded_inputs" />


                </LinearLayout>
                <ProgressBar
                    android:id="@+id/progressBar4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_gravity="center"/>
                <Button
                    android:id="@+id/btnAddCompanyMoney"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/add_to_company_account"
                    android:backgroundTint="@color/brown4"
                    android:padding="12dp"
                    android:layout_marginTop="12dp"/>


<!--                commission-->
                <LinearLayout
                    android:id="@+id/commissionCLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:visibility="gone"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/commissionImage"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:contentDescription="@string/money_image"
                        android:src="@drawable/calc"
                        android:scaleType="centerCrop"
                        android:background="@drawable/circle_bg"
                        android:layout_marginEnd="8dp" />
                    <EditText
                        android:id="@+id/commissionInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autofillHints=""
                        android:hint="@string/percentage"
                        android:inputType="numberDecimal"
                        android:padding="16dp"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/gray"
                        android:background="@drawable/rounded_inputs" />
                </LinearLayout>
                <ProgressBar
                    android:id="@+id/cProgressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_gravity="center"/>
                <Button
                    android:id="@+id/btnChangeCConstant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/change_commission_constant"
                    android:textColor="@color/brown2"

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.restoration.RestorationFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:padding="10dp"
                android:textStyle="bold"
                android:text="@string/restore_asset_state" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="12dp"
                android:visibility="visible"
                android:orientation="vertical"
                android:layout_marginBottom="15dp"
                android:gravity="center"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="15dp"
                    android:gravity="start">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="15dp"
                        android:gravity="start">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginEnd="20dp"
                            android:layout_gravity="center|start"
                            android:contentDescription="@string/money_image"
                            android:src="@drawable/list"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:id="@+id/variablesText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Due to a weak internet connection during an activity, some functions might not execute to the end. This will definitely cause one or two of a few problems:"
                            android:textSize="18sp"
                            android:textColor="@android:color/holo_orange_light"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="15dp"
                        android:gravity="start">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginEnd="20dp"
                            android:layout_gravity="center|start"
                            android:contentDescription="@string/money_image"
                            android:src="@drawable/pen"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="A bike remains to be assigned even though that rider has already clocked out. This renders the bike redundant because the system recognizes it as assigned but is actually not."
                            android:textSize="18sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="15dp"
                        android:gravity="start">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginEnd="20dp"
                            android:layout_gravity="center|start"
                            android:contentDescription="@string/money_image"
                            android:src="@drawable/pen"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="A battery(s) remains to show valid assignment even after a clockout hence can't be loaded."
                            android:textSize="18sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="15dp"
                        android:gravity="start">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginEnd="20dp"
                            android:layout_gravity="center|start"
                            android:contentDescription="@string/money_image"
                            android:src="@drawable/pen"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="A rider's account errs in that the clock-in tab wants them to clock out first and the clock-out tab requires them to clock in first."
                            android:textSize="18sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="15dp"
                        android:gravity="start">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginEnd="20dp"
                            android:layout_gravity="center|start"
                            android:contentDescription="@string/money_image"
                            android:src="@drawable/pen"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:id="@+id/variable4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="In such scenarios, you want to flush that particular item."
                            android:textSize="18sp"/>

                    </LinearLayout>





                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>